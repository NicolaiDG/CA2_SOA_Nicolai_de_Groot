@page "/Venues"
@model CA2_Nicolai_de_Groot.Pages.VenuesModel

@{
    ViewData["Title"] = "Event Displayer : Venues";
}

<main class="content-wrapper">
    <div class="container">

        <div class="section-header">
            <h2>All Venues</h2>
            <span>Browse all available venues</span>
        </div>

        <div class="projects">
            @foreach (var venue in Model.Venues)
            {
                <a href="/VenueEvents/@venue.Id" class="project-link">
                    <div class="project">
                        <h3>@venue.Name</h3>
                        <p><strong>Address:</strong> @venue.Address</p>
                        <p><strong>Events:</strong> @venue.Events.Count</p>
                    </div>
                </a>
            }
        </div>

    </div>
</main>

<style>
    .project-link {
        display: block;
        text-decoration: none;
        color: inherit;
    }

    .project-link:hover {
        cursor: pointer;
        border: 1px solid #f69730;
    }
</style>
